<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".step_3">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:text="Step 3/5"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font"
        android:text="What do you to work on?"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ImageView
        android:id="@+id/man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/man" />

    <Button
        android:id="@+id/hand"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginTop="152dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/font"
        android:text="Hands"
        android:textAllCaps="false"
        android:textColor="#6790CB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/Spine"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/font"
        android:text="Spine"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"
        android:textColor="#6790CB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hand" />

    <Button
        android:id="@+id/tors"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/font"
        android:text="Torso"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"
        android:textColor="#6790CB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Spine" />

    <Button
        android:id="@+id/Legs"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/font"
        android:text="Legs"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"
        android:textColor="#6790CB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tors" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="170dp"
        app:layout_constraintStart_toEndOf="@+id/hand"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/line_hands" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="155dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@+id/Spine"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/line_spine" />
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/tors"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/line_torso" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toEndOf="@+id/Legs"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:srcCompat="@drawable/line_legs" />


</androidx.constraintlayout.widget.ConstraintLayout>